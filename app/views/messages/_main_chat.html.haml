.chat
  .header
    .left-header
      .left-header__title
        = @group.name
      %ul.left-header__members
        Member:
        - @group.users.each do |user|
          = user.name
    .right-header
      .right-header__button
        Edit
  .messages
    = render @messages
    .message
      .upper-message
        .upper-message__user-name
          メンバー
        .upper-message__date
          日付
      .lower-message
        .lower-message__content
          メッセージ
    .message
      .upper-message
        .upper-message__user-name
          メンバー
        .upper-message__date
          日付
      .lower-message
        .lower-message__content
          メッセージ
    .message
      .upper-message
        .upper-message__user-name
          メンバー
        .upper-message__date
          日付
      .lower-message
        .lower-message__content
          メッセージ
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: ' type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = fa_icon 'image', class: 'icon'
          = f.file_field :image, class: 'hidden'
      = f.submit 'send', class: 'form__submit'